<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pregunta1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pregunta12"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:padding="16dp"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <ImageView

            android:id="@+id/imgAmarillo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/amarillo"/>

        <ImageView
            android:id="@+id/imgAzul"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/azul"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/imgVerde"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/verde"/>

        <ImageView
            android:id="@+id/imgCat"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/gato"
            />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/titulo14"/>






</LinearLayout>